div.container
  =link_to '1. Get a Trello Token', "https://trello.com/1/authorize?key=#{ENV['TRELLO_KEY']}&name=serializer&expiration=never&response_type=token&scope=read,write", class: 'submit submit-link', target: '_blank'

  =form_tag(trello_path, method: 'post') do
    p.token
      =text_field_tag :token, @session.trello_token, class: 'token-field', placeholder: 'Trello token'
    div.submit-area
      =submit_tag('2. Link Token', class: 'submit')

  =link_to '3. Visit Trello', 'https://trello.com', class: 'submit submit-link', target: '_blank'
  br
  p.home-link
    =link_to 'Return to serializer', root_path
